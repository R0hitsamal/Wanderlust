<% layout("/layouts/boilerplate") %>
<body>
  <div class="row">
    <div class="col-8 offset-2">
      <h3 class="mt-3 mb-3">Add new listing :-</h3>
      <form class="needs-validation" novalidate method="post" action="http://localhost:6060/listings">
        <div class="form-group mb-3">
          <label for="title">Title</label>
          <input required type="text" class="form-control border-3" name="title" placeholder="Ski Chalet in Aspen">
          <div class="valid-feedback">
            Titel looks good
          </div>
        </div>
        <div class="form-group mb-3">
          <label for="description">Description</label>
          <textarea required  name="description" class="form-control border-3" ></textarea>
          <div class="invalid-feedback">
            Discription should be short
          </div>
        </div>
        <div class="form-group mb-3">
          <label for="price">Price</label>
          <input required type="number" class="form-control border-3" name="price" placeholder="1500">
          <div class="invalid-feedback">
            Enter a valid price
          </div>
        </div>
        <div class="form-group mb-3">
          <label for="location">Location</label>
          <input required type="text" class="form-control border-3" name="location" placeholder="Jaipur, Rajastan">
          <div class="invalid-feedback">
            Please enter location
          </div>
        </div>
        <div class="form-group mb-3">
          <label for="country">Country</label>
          <input required type="text" class="form-control border-3" name="country" placeholder="India">
          <div class="invalid-feedback">
            Please enter country
          </div>
        </div>
        <div class="form-group mb-4">
          <label for="image">Image url</label>
          <input required type="url" class="form-control border-3" name="image" placeholder="https://images/photo-1552733407">
          <div class="invalid-feedback">
            Enter a valid url
          </div>
        </div>
        <div class="form-check mb-4">
          <input required type="checkbox" class="form-check-input" id="exampleCheck1">
          <label class="form-check-label" for="exampleCheck1">Confirm</label>
        </div>
        <button class="btn offset-5 mb-3" >Add</button>
      </form>
    </div>
  </div>
      
</body>

