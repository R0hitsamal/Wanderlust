<% layout("/layouts/boilerplate.ejs") %>
<body>
  <div class="row">
    <div class="col-8 offset-2">
    <h3 class="mt-3 mb-3">Edit Listing</h3>
    <form class="needs-validation" novalidate method="post" action="http://localhost:6060/listings/<%= details.id %>?_method=PATCH" class="needs-validation">
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input required id="title" value="<%= details.title %>" name="title" type="text" class="form-control border-3" />
        <div class="valid-feedback">
          Titel looks good
        </div>
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Image URL</label>
        <input required id="image" value="<%= details.image %>" name="image" type="url" class="form-control border-3" />
        <div class="invalid-feedback">
          Enter a valid url
        </div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea required id="description" name="description" class="form-control border-3"><%= details.description %></textarea>
        <div class="invalid-feedback">
          Enter short description
        </div>
      </div>
      <div class="mb-3">
        <label for="price" class="form-label">Price</label>
        <input required id="price" value="<%= details.price %>" name="price" type="number" class="form-control border-3 " />
        <div class="invalid-feedback">
          Enter a valid price
        </div>
      </div>
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input required id="location" value="<%= details.location %>" name="location" type="text" class="form-control border-3" />
        <div class="invalid-feedback">
          Enter location
        </div>
      </div>
      <div class="mb-5">
        <label for="country" class="form-label">Country</label>
        <input required id="country" value="<%= details.country %>" name="country" type="text" class="form-control border-3" />
        <div class="invalid-feedback">
          Enter country
        </div>
      </div>
      <div class="edit-editbtn">
        <button  type="submit" class="btn  ps-3 pe-3 mb-3"> Edit </button>
      </div>
    </form>
    </div>
  </div>
</body>
